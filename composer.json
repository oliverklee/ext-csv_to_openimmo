{
    "name": "oliverklee/csv_to_openimmo",
    "description": "CSV-to-OpenImmo converter",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3",
        "extension",
        "openimmo",
        "csv",
        "wodis",
        "realty",
        "converter"
    ],
    "homepage": "https://www.oliverklee.de/",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://github.com/oliverklee/ext-csv_to_openimmo",
        "issues": "https://github.com/oliverklee/ext-csv_to_openimmo/issues"
    },
    "require": {
        "php": "^5.5.0 || ~7.0.0 || ~7.1.0 || ~7.2.0",
        "ext-zip": "*",
        "ext-dom": "*",
        "ext-libxml": "*",

        "typo3/cms-core": "^7.6.23 || ^8.7.9",
        "typo3/cms-scheduler": "^7.6.23 || ^8.7.9"
    },
    "require-dev": {
        "nimut/testing-framework": "^4.1.3",
        "phpunit/phpunit": "^6.5",
        "helhum/typo3-composer-setup": "^0.5.3"
    },
    "replace": {
        "csv_to_openimmo": "self.version",
        "typo3-ter/ext-csv_to_openimmo": "self.version"
    },
    "suggest": {
        "oliverklee/realty": "*"
    },
    "autoload": {
        "psr-4": {
            "OliverKlee\\CsvToOpenImmo\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OliverKlee\\CsvToOpenImmo\\Tests\\": "Tests/"
        }
    },
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "ci:php:lint": "find *.php Classes/ Configuration/ Tests/ -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:tests:unit": "phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/",
        "ci:tests:functional": "phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Functional/",
        "ci:tests": [
            "@ci:tests:unit",
            "@ci:tests:functional"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/csv_to_openimmo\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "csv_to_openimmo",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
