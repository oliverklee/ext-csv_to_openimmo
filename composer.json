{
    "name": "oliverklee/csv_to_openimmo",
    "description": "CSV-to-OpenImmo converter",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3",
        "extension",
        "openimmo",
        "csv"
    ],
    "homepage": "https://www.oliverklee.de/",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://github.com/oliverklee/ext-csv_to_openimmo",
        "issues": "https://github.com/oliverklee/ext-csv_to_openimmo/issues"
    },

    "require": {
        "php": "^5.6.0 || ~7.0.0 || ~7.1.0 || ~7.2.0",

        "typo3/cms-core": "^6.2.30 || ^7.6.23 ",
        "typo3/cms-fluid": "^6.2.30 || ^7.6.23 ",
        "typo3/cms-frontend": "^6.2.30 || ^7.6.23 "
    },
    "require-dev": {
        "nimut/testing-framework": "^3.0",
        "helhum/typo3-composer-setup": "^0.5.1"
    },
    "replace": {
        "csv_to_openimmo": "self.version",
        "typo3-ter/ext-csv_to_openimmo": "self.version"
    },
    "suggest": {
        "oliverklee/realty": "*"
    },
    "autoload": {
        "psr-4": {
            "OliverKlee\\CsvToOpenImmo\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OliverKlee\\CsvToOpenImmo\\Tests\\": "Tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "require-typo3-version": [
            "@php -r '$conf=json_decode(file_get_contents(__DIR__.\"/composer.json\"),true);$conf[\"require\"][\"typo3/cms-core\"]=$_SERVER[\"argv\"][1];file_put_contents(__DIR__.\"/composer.json\",json_encode($conf,JSON_UNESCAPED_SLASHES|JSON_PRETTY_PRINT).chr(10));'",
            "@composer install"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/csv_to_openimmo\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
